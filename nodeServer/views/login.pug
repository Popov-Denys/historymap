html(lang='en-EU' xml:lang='en-EU')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='theme-color' content='#3366cc')
    link(rel='stylesheet' href='/static/concatenatedCSS/master.css' async)
  body    
    .topMenu
      a(href='http://newamsterdamhistorycenter.org' class='logo')
        img(id='logo-img-wide' src='http://newamsterdamhistorycenter.org/wp-content/uploads/2018/02/cropped-cropped-sprite-1.png' align='middle')
      div#header_text.headerText | Mapping Early New York
    .login.flexColumn
      h2 Backend login
      br
      form(id='loginform' action='/authenticate', method='post').flexColumn
        label(for="username") Username:
        input(id="username", name='username', type='text', placeholder="username").tabindex.inlineBlock.fieldEditable
        label(for="password") Password:
        input(id="password", name='password', type='password', placeholder="password").tabindex.inlineBlock.fieldEditable  
        button(type="submit") Submit  
      div.loginError
  footer